spring:
  datasource:
    url: ${SPRING_DATASOURCE_URL}
    username: ${SPRING_DATASOURCE_USERNAME}
    password: ${SPRING_DATASOURCE_PASSWORD}
    driver-class-name: org.postgresql.Driver
  security:
    oauth2:
      client:
        registration:
          smbx-world:
            client-id: ${OAUTH2_CLIENT_ID}
            client-secret: ${OAUTH2_CLIENT_SECRET}
            authorization-grant-type: authorization_code
            scope: "user.read"
            redirect-uri: "https://station.smbx.world/login/oauth2/code/{registrationId}"
        provider:
          smbx-world:
            authorization-uri: https://smbx.world/oauth/authorize
            token-uri: https://smbx.world/oauth/token
            user-info-uri: https://smbx.world/api/user
            user-name-attribute: nickname

springdoc:
  api-docs:
    enabled: true
  swagger-ui:
    enabled: ${SWAGGER_UI_ENABLED}
    path: /docs
    csrf:
      enabled: true
      cookie-name: "XSRF-TOKEN"

logging:
  level:
    org.springframework.security: DEBUG
    org.springframework.web: DEBUG
    org.springframework.boot.autoconfigure.security.servlet: DEBUG
    org.springframework.boot.actuate.endpoint.web: DEBUG


onedrive:
  alist: ${ONEDRIVE_ALIST}
  alist-token: ${ONEDRIVE_ALIST_TOKEN}
  worldmap-path: /station
  picbed-path: /picbed
